{
  "name": "@erc3643org/erc-3643",
  "version": "4.2.0-beta1",
  "description": "A fully compliant environment for the issuance and use of tokenized securities implementing the ERC-3643 standard.",
  "main": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "files": [
    "artifacts",
    "contracts",
    "index.js",
    "index.d.ts",
    "!contract/_testContracts",
    "!artifacts/contracts/_testContracts",
    "!contract/Migrations.sol",
    "!artifacts/contracts/Migrations.sol",
    "!artifacts/build-info"
  ],
  "scripts": {
    "prepare": "husky && forge soldeer install",
    "build": "forge build",
    "format": "forge fmt --check",
    "format:fix": "forge fmt",
    "test": "forge test --gas-report",
    "coverage": "forge coverage --no-match-coverage \"(test|dependencies|scripts)\" --ir-minimum",
    "coverage:report": "mkdir -p coverage && forge coverage --no-match-coverage \"(test|scripts|dependencies)\" --ir-minimum --report lcov --report-file coverage/lcov.info && genhtml coverage/lcov.info -o coverage/report --branch-coverage && open coverage/report/index.html",
    "clean": "forge clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ERC-3643/ERC-3643.git"
  },
  "author": "ERC-3643 Association",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/ERC-3643/ERC-3643/issues"
  },
  "homepage": "https://github.com/ERC-3643/ERC-3643#README",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "husky": "^9.1.6"
  }
}

